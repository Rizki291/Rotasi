<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal"
    tools:context=".Tenaga_Kerja">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ProvV"
                    android:layout_width="150dp"
                    android:layout_height="61dp"
                    android:background="@drawable/cell_shape"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Provinsi"
                    android:textColor="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="33.3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/SKA"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="SKA"
                        android:textColor="#fff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="33.3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/UtamaV"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/cell_shape"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Utama"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/Madya"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/cell_shape"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Madya"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/Muda"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/cell_shape"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Muda"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/cell_shape"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Total"
                            android:textColor="#fff" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="33.3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/SKT"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="SKT"
                        android:textColor="#fff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Kelas1"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/cell_shape"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Kelas1"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/Kelas2"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/cell_shape"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Kelas2"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/Kelas3"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/cell_shape"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Kelas3"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/Total1"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/cell_shape"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Total1"
                            android:textColor="#fff" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/JumlakTK"
                    android:layout_width="150dp"
                    android:layout_height="61dp"
                    android:layout_weight="1"
                    android:background="@drawable/cell_shape"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Jumlah TK"
                    android:textColor="#fff" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1200dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/ListView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="100">

                </ListView>
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>
</ScrollView>

